<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/space_grotesk_bold</item>
        <item name="android:layout_marginStart">@dimen/officina_margin_xbig</item>
        <item name="android:layout_marginEnd">@dimen/officina_margin_xbig</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/officina_text_size_title</item>
    </style>

    <style name="SecondaryText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/space_grotesk_regular</item>
        <item name="android:layout_marginStart">@dimen/officina_margin_xbig</item>
        <item name="android:layout_marginEnd">@dimen/officina_margin_xbig</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/officina_text_size_bigger</item>
    </style>

    <style name="SecondaryText.Bold">
        <item name="android:fontFamily">@font/space_grotesk_bold</item>
    </style>
</resources>
